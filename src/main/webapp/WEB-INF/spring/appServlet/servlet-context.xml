<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
		
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/" /> <!-- prefix 접두사 앞에 붙일 단어 -->
		<property name="suffix" value=".jsp" /> <!-- subfiix 접미사 뒤에 붙일 단어 -->
	</bean>
	
	<!-- 웹과 관련이 있으므로 servlet-context쪽에 기술 -->
	<context:component-scan base-package="main.controller" />
	<context:component-scan base-package="board.controller" />
	<context:component-scan base-package="email.controller" />
	
	<!-- Spring Web MVC를 하기 위해서 설정해야 하는 값들을 자동으로 추가해준다. -->
	<!-- 정적 자원 매핑 -->
	<mvc:annotation-driven />
	
	<mvc:resources location="/WEB-INF/image/" mapping="/image/**"></mvc:resources>
	<mvc:resources location="/WEB-INF/js/" mapping="/js/**"></mvc:resources>
</beans>
